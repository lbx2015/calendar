<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:src="@drawable/user_box_icon_close" />

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:background="@drawable/check_in_background"
        android:orientation="vertical">

        <com.riking.calendar.view.ZEnterImageView
            android:id="@+id/sign_in_success_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user_box_icon_signsuccess"
            app:buttonText="+10"
            app:buttonTextSize="24sp"
            app:button_color="@color/color_fffde7" />

        <com.riking.calendar.view.ZTextView
            android:id="@+id/sign_in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="签到成功！"
            android:textColor="@color/color_222222"
            android:textSize="17sp" />


        <com.riking.calendar.view.ZTextView
            android:id="@+id/current_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="当前200积分"
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="@dimen/image_height_40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_check_in_rectangle">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/i_konw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我知道了"
                android:textColor="@color/color_489dfff"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
