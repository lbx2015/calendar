<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_background_f2f2f2"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/margin_dp_7.5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_29a1f7"
            android:textSize="@dimen/normal_font_size_18" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_dp_7.5"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="@color/color_29a1f7"
            android:textSize="@dimen/normal_font_size_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D3D3" />


    <com.riking.calendar.widget.wheelpicker.widget.curved.WheelYearMonthPicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center_horizontal" />

    <View
        android:id="@+id/first_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_color_d9d9d9" />

    <LinearLayout
        android:id="@+id/whole_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <com.riking.calendar.view.ZCenterImageView
            android:id="@+id/whole_month_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:src="@drawable/not_checked_whole_month" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whole_month" />
    </LinearLayout>
</LinearLayout>