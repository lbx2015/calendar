<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="19dp"
            android:src="@drawable/cancel" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_d2d2d2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="19dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="19dp"
            android:textColor="@color/color_222222"
            android:textSize="16sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginLeft="19dp"
        android:background="@color/color_d2d2d2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="19dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/remind_time_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/look_remind_time" />

        <TextView
            android:id="@+id/remind_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@id/remind_time_image"
            android:textColor="@color/color_929292"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="54dp"
            android:textColor="@color/color_929292" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignLeft="@id/remind_time"
        android:layout_marginLeft="54dp"
        android:background="@color/color_d2d2d2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="19dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/remind_way_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/look_remind_way" />

        <TextView
            android:id="@+id/remind_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@id/remind_way_image"
            android:textColor="@color/color_929292"
            android:textSize="14sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignLeft="@id/remind_way"
        android:layout_marginLeft="54dp"
        android:background="@color/color_d2d2d2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp">

        <ImageView
            android:id="@+id/remind_repeat_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/look_remind_repeat" />

        <TextView
            android:id="@+id/remind_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@id/remind_repeat_image"
            android:textColor="@color/color_929292"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignLeft="@id/remind_repeat"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="54dp"
        android:background="@color/color_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete"
            android:layout_width="144dp"
            android:layout_height="38dp"
            android:layout_marginRight="24dp"
            android:layout_weight="1"
            android:background="#f33213"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="144dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="@string/edit"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>