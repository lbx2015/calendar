<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="139dp"
    android:layout_height="170dp"
    android:layout_marginRight="6dp"
    android:background="@drawable/follow_bg"
    android:orientation="vertical">

    <com.riking.calendar.view.CircleImageView
        android:id="@+id/icon_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:src="@drawable/profile2" />

    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_image"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="人民银行数据集大集中"
        android:textAlignment="center"
        android:textColor="@color/color_222222"
        android:textSize="15sp" />

    <FrameLayout
        android:id="@+id/follow_button"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@drawable/follow_border">

        <TextView
            android:id="@+id/follow_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/com_btn_icon_plus"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </FrameLayout>
</RelativeLayout>