    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:src="@color/color_e2e2e2" />

    <FrameLayout
        android:id="@+id/per_sunday_item"
        android:layout_width="match_parent"
