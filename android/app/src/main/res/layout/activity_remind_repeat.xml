        android:background="@color/white"
        android:paddingLeft="15dp"
        android:src="@color/color_e2e2e2" />

    <FrameLayout
        android:id="@+id/repeat_on_working_day_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
