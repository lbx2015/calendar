<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_f2f2f2"
        android:gravity="center_vertical">
        <com.riking.calendar.view.ZCenterImageView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="@dimen/margin_dp_7.5"
            android:src="@drawable/cancel" />

        <com.riking.calendar.view.ZCenterImageView
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_dp_7.5"
            android:src="@drawable/work_rm_icon_dh" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.riking.calendar.widget.wheelpicker.widget.curved.WheelDatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_weight="1" />

        <com.riking.calendar.widget.wheelpicker.widget.curved.WheelTimePicker
            android:id="@+id/time_picker"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>