<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_f2f2f2"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginRight="19dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reminder"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_add_black_24dp" />
        </FrameLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/top_tab_layout"
        style="@style/thirdFragmentTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_tab_height"
        android:background="@color/white"
        app:tabBackground="@android:color/white"
        app:tabIndicatorColor="@color/color_29a1f7"
        app:tabIndicatorHeight="2dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"></android.support.design.widget.TabLayout>

    <com.riking.calendar.view.CustomViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@color/color_background_f2f2f2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"></com.riking.calendar.view.CustomViewPager>
</LinearLayout>