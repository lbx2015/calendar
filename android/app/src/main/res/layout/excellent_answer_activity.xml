<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:onClick="clickBack"
            android:src="@drawable/nav_icon_back" />

        <com.riking.calendar.view.ZTextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的粉丝"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/action_bar_text_size" />

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.riking.calendar.view.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.riking.calendar.view.ZTextView
            android:id="@+id/topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="人民银行数据大集中"
            android:textColor="@color/color_222222"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/icon_image"
            app:layout_constraintTop_toTopOf="parent" />

        <com.riking.calendar.view.ZTextView
            android:id="@+id/follow_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="120人关注"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/icon_image"
            app:layout_constraintTop_toBottomOf="@id/topic_title" />

        <FrameLayout
            android:id="@+id/follow_button"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/follow_border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </FrameLayout>
    </android.support.constraint.ConstraintLayout>

    <com.necer.ncalendar.view.ExpandableTextView
        android:id="@+id/expandable_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_scrollFlags="scroll|enterAlways">

        <com.riking.calendar.view.ZTextView
            android:id="@id/id_source_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="为了适应我国经济，金融改革和发展的需求，准确、及时、完整、高效的做好金融统计工作，根据信息发布和数据共享等工作内容将发生较大变化.
为了适应我国经济，金融改革和发展的需求，准确、及时、完整、高效的做好金融统计工作，根据信息发布和数据共享等工作内容将发生较大变化."
            android:textColor="@color/color_666666"
            android:textSize="14sp" />

        <com.riking.calendar.view.ZTextView
            android:id="@id/id_expand_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:text="展开"
            android:textColor="@color/color_999999" />
    </com.necer.ncalendar.view.ExpandableTextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_d2d2d2" />

    <com.riking.calendar.view.PullToLoadViewWithoutFloatButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pullToLoadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" />

    <include layout="@layout/empty_layout" />

</LinearLayout>