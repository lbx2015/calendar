<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_height"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:onClick="clickBack"
            android:src="@drawable/nav_icon_back" />

        <com.riking.calendar.view.ZTextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="评论12"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/action_bar_text_size" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_d2d2d2" />

    <com.riking.calendar.view.ZTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="什么是私募资金投资？"
        android:textColor="@color/color_222222"
        android:textSize="17sp" />

    <com.riking.calendar.view.ZTextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资什么是私募资金投资"
        android:textColor="@color/color_666666"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_f2f2f2" />

    <com.riking.calendar.view.PullToLoadViewWithoutFloatButton xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pullToLoadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" />
    <!-- <android.support.v4.widget.SwipeRefreshLayout
         android:id="@+id/swipe_layout"
         android:layout_weight="1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <android.support.v7.widget.RecyclerView
             android:id="@+id/recycler_view"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            ></android.support.v7.widget.RecyclerView>
     </android.support.v4.widget.SwipeRefreshLayout>-->

    <include layout="@layout/empty_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/color_d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/add_comment_back_ground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/com_icon_answer" />

            <com.riking.calendar.view.KeyboardEditText
                android:id="@+id/write_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:background="@android:color/transparent"
                android:hint="写评论"
                android:maxLines="3"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_999999"
                android:textSize="15sp" />
        </LinearLayout>

        <com.riking.calendar.view.ZTextView
            android:id="@+id/public_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:enabled="false"
            android:text="发布"
            android:textColor="@color/color_cccccc"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>