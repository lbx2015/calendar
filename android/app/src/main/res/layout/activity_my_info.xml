                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_wechat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加微信"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>

        <!--company name-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="公司"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/company_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/company_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_company_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加公司名称"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
        <!--divider-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:src="@color/color_e2e2e2" />
        <!--industry-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="行业"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/industry_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/industry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_industry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加行业"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
        <!--divider-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:src="@color/color_e2e2e2" />
        <!--position-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="职位"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/position_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加职位"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
        <!--divider-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:src="@color/color_e2e2e2" />
        <!--job location-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="工作地区"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加工作地区"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>