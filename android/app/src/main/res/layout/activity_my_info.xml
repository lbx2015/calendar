<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_img_headbg"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:onClick="clickBack"
                android:src="@drawable/nav_icon_back_w" />

            <RelativeLayout
                android:id="@+id/user_info_relative_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/login_linear_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <com.riking.calendar.view.CircleImageView
                        android:id="@+id/user_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="onPickImage"
                        android:src="@drawable/user_icon_head_notlogin" />

                    <com.riking.calendar.view.ZTextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <com.riking.calendar.view.ZTextView
                        android:id="@+id/user_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="user_comment"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:onClick="clickUserInfo"
                    android:src="@drawable/user_infor_icon_edit" />
            </RelativeLayout>

        </LinearLayout>


        <!--phone number-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="手机号码"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/cell_phone_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/cell_phone_nubmer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_cell_phone_nubmer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加手机号码"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/edit_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
        <!--divider-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:src="@color/color_e2e2e2" />
        <!--email-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="邮箱"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:text="18223343324"
                android:textColor="@color/color_222222"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/add_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/com_btn_icon_plus"
                android:drawablePadding="2dp" android:gravity="center"
                android:text="添加邮箱"
                android:textColor="@color/color_489dfff"
                android:textSize="17sp" />

            <com.riking.calendar.view.ZTextView
                android:id="@+id/email_validated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/email_nav"
                android:onClick="clickInvalidateEmail"
                android:text="去验证"
                android:textColor="@color/color_666666"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/email_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/work_rm_icon_arrow_r" />
        </RelativeLayout>
        <!--divider-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:src="@color/color_e2e2e2" />
        <!--wechat-->
        <com.riking.calendar.view.ZTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="微信"
            android:textColor="@color/color_999999"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/wechat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <com.riking.calendar.view.ZTextView
                android:id="@+id/wechat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
