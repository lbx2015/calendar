<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:src="@drawable/user_box_icon_close" />

    <LinearLayout
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:background="@drawable/check_in_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sign_in_fail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/user_box_icon_signfail" />

        <TextView
            android:id="@+id/sign_in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="签到失败！"
            android:textColor="@color/color_222222"
            android:textSize="17sp" />
        
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="@dimen/image_height_40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_check_in_rectangle">

            <TextView
                android:id="@+id/i_konw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="我知道了"
                android:textColor="@color/color_489dfff"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
