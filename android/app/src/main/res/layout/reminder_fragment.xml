<?xml version="1.0" encoding="utf-8"?>

<com.riking.calendar.view.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_f2f2f2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/check_remind_history"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/search_button_rounded_rectangle"
        android:gravity="center"
        android:text="查看已完成的提醒"
        android:textColor="@color/color_929292"
        android:textSize="10sp"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/reminds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/today_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/today"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />

                <com.tubb.smrv.SwipeMenuRecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color_d9d9d9"
                    android:paddingTop="4dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/today_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="19dp"
                        android:textColor="@color/color_818181"
                        android:textSize="12sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tomorrow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/tomorrow"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />


                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tomorrow_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_color_d9d9d9"
                    android:paddingTop="4dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@android:color/white">

                    <TextView
                        android:id="@+id/tomorrow_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="19dp"
                        android:textColor="@color/color_818181"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/future_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/future"
                    android:textColor="@color/color_666666"
                    android:textSize="12sp" />


                <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/future_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:scrollbars="vertical" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <com.riking.calendar.view.CustomLinearLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <com.riking.calendar.view.ZCenterImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="49dp"
            android:src="@drawable/empty_reminder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/no_reminds"
            android:textColor="@color/color_323232"
            android:textSize="12sp" />
    </com.riking.calendar.view.CustomLinearLayout>

</com.riking.calendar.view.CustomLinearLayout>