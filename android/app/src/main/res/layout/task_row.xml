<?xml version="1.0" encoding="utf-8"?>
<com.tubb.smrv.SwipeHorizontalMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sml="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sml"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    sml:sml_auto_open_percent="0.2"
    sml:sml_scroller_duration="50"
    sml:sml_scroller_interpolator="@android:anim/bounce_interpolator">

    <RelativeLayout
        android:id="@+id/smContentView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/done"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/done"
            android:layout_toStartOf="@+id/image_star"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_323232"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />

        <!--      <View
                  andruserIdd:iduserId@+id/divider"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/divider_height"
                  android:layout_alignParentBottom="true"
                  android:layout_marginLeft="54dp"
                  android:background="@color/divider_color_d9d9d9" />-->
    </RelativeLayout>

    <TextView
        android:id="@id/smMenuViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/smMenuViewRight"
        android:layout_width="160dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/tv_edit"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|start|center_vertical"
            android:background="@color/color_ffab40"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/work_icon_star_n" />

        <ImageView
            android:id="@+id/tv_text"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:background="@color/color_ff5252"
            android:gravity="center"
            android:scaleType="center"
            android:src="@drawable/work_icon_delete" />
    </FrameLayout>

</com.tubb.smrv.SwipeHorizontalMenuLayout>