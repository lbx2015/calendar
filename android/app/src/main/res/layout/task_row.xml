<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="10dp">

    <RelativeLayout
        android:id="@+id/task_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/done"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:paddingRight="10dp"
            android:src="@drawable/not_done" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/done"
            android:textColor="@color/color_323232" />

        <ImageView
            android:id="@+id/image_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/select_time"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:src="@drawable/not_important" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_color_d9d9d9" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:background="#f33213"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </FrameLayout>

</LinearLayout>