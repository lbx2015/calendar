<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp">

            <com.riking.calendar.view.ZCenterImageView
                android:id="@+id/progress1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/current_page_dot" />

            <com.riking.calendar.view.ZCenterImageView
                android:id="@+id/progress2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dddddd_dot" />

            <com.riking.calendar.view.ZCenterImageView
                android:id="@+id/progress3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/dddddd_dot" />

            <com.riking.calendar.view.ZCenterImageView
                android:id="@+id/progress4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/dddddd_dot" />
        </LinearLayout>

        <TextView
            android:id="@+id/enter_button"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_marginBottom="46dp"
            android:background="@drawable/rounded_rectangle_not_login"
            android:gravity="center"
            android:onClick="onClickEnter"
            android:text="立即体验"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/jump_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:layout_marginTop="20dp"
        android:onClick="onClickEnter"
        android:text="跳过"
        android:textColor="@color/color_999999"
        android:textSize="17sp" />


</RelativeLayout>